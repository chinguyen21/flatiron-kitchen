<h5>
<%= form_for(@ingredient) do |f| %>
  <% if @ingredient.errors.any? %>
    <ul>
    <% @ingredient.errors.full_messages.each do |message| %>
      <h3 id="error"><%= message %></h3>
    <% end %>
    </ul>
  <% end %>


  <label id="label">Name</label><br>
  <%= f.text_field :name %><br><br>
  <%= f.submit %>
<% end %>

</h5>
